<table class="review" data-id="{{id}}" data-spoiler="{{spoiler}}">
	{{#if spoiler}}
	<p>Not for you!</p>
	{{else}}
	<thead>
		<tr>
			<th>#</th>
			<th>Username</th>
			<th>Comment</th>
			<th>Spoiler Y/N</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>{{id}}</td>
			<td>{{user}}</td>
			<td>{{comment}}</td>
			<td>{{spoiler}}</td>
		</tr>
	</tbody>
	{{/if}}
</table>