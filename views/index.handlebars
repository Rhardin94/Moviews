        <div class="row">
          <!--Displays reviews that are non spoilers-->
          <div class="col-md-6">
            <div class="review-feed">
              <ul>
                {{#each review}}
                {{#unless spoiler}}
                {{> reviews/reviews-block spoiler=true}}
                {{/unless}}
                {{/each}}
              </ul>
            </div>
          </div>
          <!--Hides reviews with spoilers, unless onclick event reveals these-->
          <div class="col-md-6">
            <div class="review-feed buryIt">
              <ul>
                {{#each review}}
                {{#if spoiler}}
                {{> reviews/reviews-block spoiler=false}}
                {{/if}}
                {{/each}}
              </ul>
            </div>
          </div>
        </div>

