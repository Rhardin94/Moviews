<div class="container">
  {{#each movies}}
  <div class="row text-center">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="card p-1">
        <img class="card-img-top" src="{{posterURL}}" alt="{{title}}">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <a href="/api/reviews/{{id}}" class="btn btn-danger reviews" value="{{id}}" title="{{title}}">Reviews</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  <!--Modal-->
  <div class="modal fade" id="review-modal" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body text-center">
            <h2 id="review"></h2>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary add">Leave a Review</button>
            <a href="#top"><button type="button" class="btn btn-danger exit" data-dismiss="modal">Close</button></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>